						}
					}
				}
			}
			CLUSTER[at0106] occurrences matches {0..1} matches {	-- Predominant cell type(s)
				items cardinality matches {1..*; unordered} matches {
					ELEMENT[at0107] occurrences matches {0..1} matches {	-- Predominant cell type
