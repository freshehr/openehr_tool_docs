									[local::
									at0119, 	-- Present
									at0120, 	-- Absent
									at0121]	-- Indeterminate
								}
							}
						}
					}
					ELEMENT[at0039] occurrences matches {0..1} matches {	-- Extent of desmoplasia
						value matches {
							DV_PROPORTION matches {
								numerator matches {|0.0..100.0|}
