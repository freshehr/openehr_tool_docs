				>
				["at0012"] = <
					text = <"Hate to give up">
					description = <"Which cigarette would you hate most to give up?">
				>
				["at0013"] = <
					text = <"Any other">
					description = <"Any cigarette other than the first cigarette in the morning would be most difficult to give up.">
				>
				["at0014"] = <
