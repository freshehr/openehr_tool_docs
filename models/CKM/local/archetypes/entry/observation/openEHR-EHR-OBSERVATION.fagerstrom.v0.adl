		["en"] = <
			items = <
				["at0000"] = <
					text = <"Fagerström test for nicotine dependence">
					description = <"Standard instrument for assessing physical dependence on nicotine.">
				>
				["at0001"] = <
					text = <"Event Series">
					description = <"@ internal @">
				>
				["at0002"] = <
